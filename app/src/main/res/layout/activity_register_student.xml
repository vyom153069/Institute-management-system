<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ordinarygrey"
    android:padding="5dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="STUDENT REGISTRATION"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_ll_new"
        android:layout_width="fill_parent"
        android:layout_weight="0.46"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_tv_name"
            android:layout_width="wrap_content"
            android:text="NAME"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/darkgrey"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_edt_name"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:background="@color/extralightgrey"
            android:textColor="@color/darkgrey"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/add_tv_fatherName"
            android:layout_width="wrap_content"
            android:text="FATHER NAME"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:textColor="@color/darkgrey"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_edt_fatherName"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:background="@color/extralightgrey"
            android:textColor="@color/darkgrey"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/add_tv_address"
            android:layout_width="wrap_content"
            android:text="ADDRESS"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkgrey"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_edt_address"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:background="@color/extralightgrey"
            android:textColor="@color/darkgrey"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/add_tv_mobileno"
            android:layout_width="wrap_content"
            android:text="MOBILE NO."
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/darkgrey"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_edt_mobile"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:maxLines="1"
            android:background="@color/extralightgrey"
            android:textColor="@color/darkgrey"
            android:paddingLeft="5dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/add_tv_course"
            android:layout_width="wrap_content"
            android:text="COURSE"
            android:layout_marginTop="10dp"
            android:textColor="@color/darkgrey"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/add_sp_course"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:entries="@array/course"
            android:background="@color/extralightgrey"
            android:layout_height="50dp">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_ll_reg"
        android:layout_width="fill_parent"
        android:layout_weight="0.8"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/wall2"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/add_tv_hiname"
            android:layout_width="wrap_content"
            android:text="Hi Amol"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_tv_sucessfull"
            android:layout_width="wrap_content"
            android:text="Your Admission is successFull........"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_tv_regitration"
            android:layout_width="wrap_content"
            android:text="Registation id: 1"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_btn_ok"
            android:layout_width="wrap_content"
            android:text="Ok"
            android:textStyle="bold"
            android:onClick="onClick"
            android:textSize="18dp"
            android:clickable="true"
            android:background="@drawable/shape"
            android:textColor="@color/darkgrey"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_ll_bottom"
        android:layout_width="fill_parent"
        android:layout_weight="0.1"
        android:background="@color/extralightgrey"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Cancel"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_btn_submit"
            android:layout_width="wrap_content"
            android:text="Submit"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
